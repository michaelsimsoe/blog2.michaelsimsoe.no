{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "include": ["src", "scripts"],
  "ts-node": {
    "esm": true
  }
}
